<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_with(model: @produto, local: true, class: "bg-light p-4 rounded shadow-sm") do |form| %>
        <% if @produto.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@produto.errors.count, "erro") %> impediram o salvamento deste produto:</h4>
            <ul>
              <% @produto.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-3">
          <%= form.label :nome, class: "form-label" %>
          <%= form.text_field :nome, class: "form-control", placeholder: "Digite o nome do produto" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :quantidade, class: "form-label" %>
          <%= form.number_field :quantidade, class: "form-control", placeholder: "Digite a quantidade" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Salvar Produto", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
