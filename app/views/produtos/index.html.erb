<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1 class="display-4 text-primary mb-4">Lista de Produtos</h1>
      <p class="text-success"><%= notice %></p>
      <%= link_to 'Novo Produto', new_produto_path, class: 'btn btn-primary btn-lg mb-3' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="thead-dark">
          <tr class="text-center">
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @produtos.each do |produto| %>
            <tr>
              <td class="align-middle"><%= produto.nome %></td>
              <td class="align-middle text-center"><%= produto.quantidade %></td>
              <td class="align-middle text-center">
                <div class="btn-group gap-2" role="group">
                  <%= link_to 'Exibir', produto_path(produto), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Editar', edit_produto_path(produto), class: 'btn btn-warning btn-sm' %>
                  <%= button_to 'Apagar', produto, method: :delete, class: 'btn btn-danger btn-sm' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
